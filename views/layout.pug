doctype html
//- html(style="background-color:rgba(25,25,35)")
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/styles.css')
  body
    nav.bg-gray-800
      .max-w-7xl.mx-auto.px-2.py-5 
        .relative.flex.items-center.justify-between.h-16
          .flex-1.flex.items-center.justify-center(class='sm:items-stretch sm:justify-start')
            .flex-shrink-0.flex.items-center
              a(href='/') 
                img.h-20.w-auto(src='images/logo.png')
            .hidden(class='sm:block sm:ml-6')
              .flex.space-x-4
                // Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white"
                a.bg-gray-900.text-white.px-3.py-2.mt-3.rounded-md.text-base.font-medium(href='/comments', aria-current='page') Comments
                a.text-gray-300.px-3.py-2.rounded-md.mt-3.text-base.font-medium(href='/contact', class='hover:bg-gray-700 hover:text-white') Contact
                a.text-gray-300.px-3.py-2.rounded-md.mt-3.text-base.font-medium(href='#', class='hover:bg-gray-700 hover:text-white') Projects
                a.text-gray-300.px-3.py-2.rounded-md.mt-3.text-base.font-medium(href='#', class='hover:bg-gray-700 hover:text-white') Calendar
    block content
